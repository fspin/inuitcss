{
    "name": "inuitcss",
    "version": "6.0.0",
    "description": "Extensible, scalable, Sass-based, OOCSS framework for large and long-lasting UI projects.",
    "main": "main.scss",
    "scripts": {
        "prestart": "source ~/.nvm/nvm.sh; nvm use",
        "scss-compile": "node-sass --source-map true main.scss -o css/",
        "scss-autoprefixer": "postcss css/*.css --use autoprefixer -d css",
        "scss-lint": "stylelint '**/*.scss' --syntax scss || true",
        "build:css": "run-s scss-compile scss-autoprefixer",
        "watch:css": "onchange '**/*.scss' -e '_docroot/' -v -- npm run build:css",
        "test": "npm run scss-lint && mocha test/run.js",
        "start": "npm run watch:css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/inuitcss/inuitcss.git"
    },
    "keywords": [
        "oocss",
        "sass",
        "bem",
        "itcss",
        "css"
    ],
    "author": "Harry Roberts <csswizardry@gmail.com>",
    "contributors": [
        "Anselm Hannemann",
        "Dennis Heib√ºlt",
        "Florian Bouvot",
        "Nenad Jelovac"
    ],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/inuitcss/inuitcss/issues"
    },
    "homepage": "https://github.com/inuitcss/inuitcss#readme",
    "dependencies": {
        "autoprefixer": "^8.2.0",
        "sass-mq": "^4.0.2"
    },
    "devDependencies": {
        "glob": "^7.1.2",
        "mocha": "5.0.5",
        "node-sass": "^4.8.3",
        "npm-run-all": "^4.1.2",
        "onchange": "^3.3.0",
        "postcss-cli": "^5.0.0",
        "sass-true": "^3.1.0",
        "stylelint": "^9.2.0",
        "stylelint-scss": "^3.0.0"
    },
    "browserslist": [
        "last 2 versions",
        "ie 9-11",
        "ios 8-12",
        "safari 9",
        "android 4-5"
    ]
}
